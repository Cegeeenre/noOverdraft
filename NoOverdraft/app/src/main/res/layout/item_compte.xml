<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/linear_layout_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/main_mois"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mois"/>
            <!--app:tint="@color/white"-->

       <TextView
           android:id="@+id/total_depense_somme"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:text="@string/app_mois_dashboard"
           android:textColor="@color/white"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/linear_layout_sms"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="vertical"
       android:layout_marginRight="10dp"
       android:background="@color/main_semaine"
       >

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_semaine"/>
           <!--app:tint="@color/white"-->

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:text="@string/app_semaine_dashboard"
           android:textColor="@color/white"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/linear_layout_mail"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="vertical"
       android:layout_marginRight="10dp"
       android:background="@color/main_compte">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_argent"/>
           <!--app:tint="@color/white"-->

       <TextView
           android:id="@+id/nom_compte"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="com compte"
           android:textColor="@color/white"/>
       <TextView
           android:id="@+id/num_compte"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="num compte"
           android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>